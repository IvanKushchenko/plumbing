ul.c-catalog-menu__nav.js-catalog-menu-nav
	-
		var items = ['Ванны', 'Унитазы', 'Душевые кабины', 'Душевые углы', 'Душевые двери', 'Душевые поддоны', 'Мебель для ванной', 'Смесители', 'Душевая программа', 'Раковины', 'Полотенцесушители', 'Биде', 'Аксессуары для ванной', 'Шторки для ванны', 'Инсталляции'];
	each item in items
		li.c-catalog-menu__item
			a(href="#").c-catalog-menu__link=item
			.c-catalog-menu__detail
				.c-catalog-menu__detail-top
					h4
						a(href="#").c-catalog-menu__detail-title=item
				.c-catalog-menu__detail-body
					-
						var groups = [
							{
								title: 'Акриловые',
								list: ['Длина 150 см', 'Длина 150 см', 'Длина 150 см', 'Длина 150 см', 'Длина 150 см']
							},
							{
								title: 'Чугунные',
								list: ['Длина 150 см', 'Длина 150 см', 'Длина 150 см', 'Длина 150 см', 'Длина 150 см']
							},
							{
								title: 'Чугунные',
								list: ['Длина 150 см', 'Длина 150 см', 'Длина 150 см', 'Длина 150 см', 'Длина 150 см']
							}
						];
						var types = ['Стальные', 'Гидромассажные', 'Дизайнерские'];
					.row
						each group in groups
							.col-md-3
								.c-catalog-menu__detail-group
									h5
										a(href="#").c-catalog-menu__detail-group-title=group.title
									each groupItem in group.list
										.c-catalog-menu__detail-group-item
											a(href="#").c-catalog-menu__detail-group-link=groupItem
						.col-md-3
							each type in types
								h5.mb-2
									a(href="#").h-box-shadow-none=type
				.c-catalog-menu__detail-footer
